<% include include/header.ejs %>
<div class="jumbotron text-center">
  <h1>Carrito de compras</h1>
</div>

<div class="container">
  <form method="POST" action="/update-cart">
    <% if(products.length > 0) { %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(function(product, index) { %>
          <tr>
            <td><a class="text-body" href="/product/<%= product.pid %>"><img style="max-width: 100px; max-height: 50px;"
                  src="<%= product.picture %>" /></a>
            </td>
            <td><a class="text-body" href="/product/<%= product.pid %>"><%= product.title %></a><br><span
                class="badge badge-warning"><%= product.name %></span></td>
            <td>$<%= product.price %></td>
            <td><input type="number" style="width: 70px;" min="1" name="qnt[]" value="<%= product.qnt %>" /></td>
            <td><a href="/remove-from-cart/pid-<%= index %>">Eliminar</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <div class="clearfix"></div>
    <a href="/empty-cart" class="btn btn-danger float-left">Limpiar carrito</a>
    <a href="/checkout" class="btn btn-primary float-right">Checkout</a>
    <button class="btn btn-success float-right" style="margin-right: 10px;">Actualizar</button>
    <div class="clearfix"></div>
    <% } else { %>
    <p>Tu carrito est√° vacio. <a href="/shop">Continuar comprando</a> </p>
    <% } %>
  </form>
</div>
<% include include/footer.ejs %>
